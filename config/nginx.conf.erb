worker_processes 1;
events { worker_connections 1024; }

http {
  server {
    listen <%= ENV["PORT"] %>;
    root <%= ENV["HEROKU_APP_DIR"] %>;

    location / {
      try_files $uri $uri/ /index.html;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
      root <%= ENV["HEROKU_APP_DIR"] %>;
    }
  }
}

